{
  "name": "typescript-action",
  "version": "0.0.2",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map",
    "test": "jest",
    "all": "yarn version --patch && yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akanewmedia/actions-validate-json.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.1.1",
    "@chronocide/fs-walk": "^1.2.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.186",
    "@types/node": "^16.10.5",
    "@typescript-eslint/parser": "^5.39.0",
    "@vercel/ncc": "^0.31.1",
    "better-assert": "^1.0.2",
    "eslint": "^8.24.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^27.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
